<section class="contact_us" style="padding-top: 12%; display: flex; justify-content: center; align-items: center;" >
    <div class="container" id="contact_us"  onclick="formrestore()">
        <div class="row">
            <div class="col-md-10 offset-md-1">
                <div class="contact_inner">
                    <div class="row">
                        <div class="col-md-10">
                            <div class="contact_form_inner">
                                <h3 style="padding-left:35%; padding-top: 3%;">Join us in building better world</h3>
                                    <div class="contact_field" style="align-self: center;">
                                        <h3>Contact Us</h3>
                                        <p>Feel Free to contact us any time. We will get back to you as soon as we can!.
                                        </p>
                                        <form action="/contact" id="contactForm" method="post">
                                            <input type="text" class="form-control form-group" placeholder="Name" name="username" />
                                            <input type="text" class="form-control form-group" id="email" placeholder="Email" name="email" />
                                            <textarea class="form-control form-group" placeholder="Message" name="message"></textarea>
                                            <button type="submit" class="contact_form_submit">Send</button>
                                        </form>
                                    </div>
                            </div>
                        </div>
                        <div class="col-md-2">
                            <div class="right_conatct_social_icon d-flex align-items-end">
                                <div class="socil_item_inner d-flex">
                                    <li><a href="#"><i class="fab fa-facebook-square"></i></a></li>
                                    <li><a href="#"><i class="fab fa-instagram"></i></a></li>
                                    <li><a href="#"><i class="fab fa-twitter"></i></a></li>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>


    <script>
        var emailfield = document.getElementById("email")
        var form = document.getElementById("contactForm");
        var submit = document.getElementById("contactForm").addEventListener("submit", function (e) {
          e.preventDefault();
          var str=emailfield.value;
         
 
            if(!(/^[a-zA-Z0-9.!#$%&'*+/=?^_`{|}~-]+@[a-zA-Z0-9-]+(?:\.[a-zA-Z0-9-]+)*$/.test(str)))
            {
                
                wrongvalues();
                return false;
            }
         else{
            alert("Submiting the form");
            return  form.submit();
         }

        })
      </script>

<div class="alert alert-danger" role="alert" id="error_message" style="position: absolute; top: 5rem; left: 35rem; display: none;">Incorrect Email</div>
     

<script>
 function wrongvalues(){

let x=document.getElementById("error_message");
if (x.style.display === "none") {
    x.style.display = "block";
  } else {
    x.style.display = "none";
  }

    let formval= document.getElementById("contact_us");
  formval.style.color="red";

let id = null;
let pos = 100;
let kos=150;
clearInterval(id);
id = setInterval(frame, 0.01);

function frame() {
if (pos <= 150 && pos>=100) {
pos++; 
formval.style.marginLeft = pos + "px"; 

}
else if(kos>95){ 
kos--;
formval.style.marginLeft = kos + "px"; 
}
else{
clearInterval(id);
}
}

 }
</script>

<script>
    function formrestore(){
      let x=document.getElementById("error_message");
      x.style.display = "none";
      let formval= document.getElementById("contact_us");
  formval.style.color="";
    }
  </script>



