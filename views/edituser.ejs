<!DOCTYPE html>
<html lang="en">

<head>
	<meta charset="UTF-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>Document</title>
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet"
		integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
<style>
	body{
	background-color: antiquewhite;
	}
.editu{
	background: url("edituser.png");
	background-repeat: no-repeat;
 background-position: 23rem;

}
input[type="text"], [type="tel"], [type="email"], [ type="date" ] {
	border-radius: 20px;
}
.gender, .descript{
	border-radius: 20px;
}

.form-input img {
			margin: auto;
			margin-top: 2rem;
			width: 16rem;
			height: 16rem;
			display: none;
			margin-bottom: 30px;
			background-color: white;
			border-radius: 50%;
		}

.preview{
	padding-top: 0.1rem;
}
		
.imgupl{
	margin-left: 14rem;
	height: 25rem;
	width: 25rem;
	background-color: rgba(104, 83, 35, 0.242);
}
.image-upload{
margin-top: 10rem;
margin-left: 6rem;
}
</style>

</head>
<body>
	<div class="editu">
	<div class="container">
		<div class="col-lg-8 col-lg-offset-2 col-md-8 col-md-offset-2 col-sm-12 col-xs-12 edit_information">
			<form id="EditForm" action="" method="POST"  enctype="multipart/form-data">
				<h3 class="text-center">Edit Personal Information</h3>




	


				<div class="form-input imgupl">
					<div class="preview">
						<img id="file-ip-1-preview">
					</div>

					<label for="file-ip-1" id="tuje_hide" style="margin-left: 8rem;">Upload your Avatar</label>
					<input type="file" id="file-ip-1" accept="image/*" name="image" class="image-upload"
						onchange="showPreview(event);">
				</div>



				<div class="row">
					<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
						<div class="form-group">
							<label class="profile_details_text">Username:</label>
							<input type="text" name="username" class="form-control" value="" required>
						</div>
					</div>
				</div>
				<div class="row">
					<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
						<div class="form-group">
							<label class="profile_details_text">Email Address:</label>
							<input type="email" name="email" class="form-control" value="">
						</div>
					</div>
				</div>
				<div class="row">
					<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
						<div class="form-group">
							<label class="profile_details_text">Mobile Number:</label>
							<input type="tel" name="phone" class="form-control" value="" required pattern=[0-9]{10}>
						</div>
					</div>
				</div>
				<div class="row">
					<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
						<div class="form-group">
							<label class="profile_details_text">Date Of Birth:</label>
							<input type="date" name="dob" class="form-control" value="">
						</div>
					</div>
				</div>
				<div class="row">
					<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
						<div class="form-group">
							<label class="profile_details_text">Gender:</label>
							<select name="gender" class="form-control gender" value="">
								<option value="Male">Male</option>
								<option value="Female">Female</option>
							</select>
						</div>
					</div>
				</div>


				<div class="row">
					<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
						<div class="form-group">
							<label class="profile_details_text">Details:</label>
							<textarea name="details" id="" cols="30" rows="10" class="form-control descript"></textarea>
						</div>
					</div>
				</div>

				<div class="row">
					<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 submit">
						<div class="form-group">
							<input type="submit" class="btn btn-success" value="Submit">
						</div>
					</div>
				</div>
			</form>
		</div>
	</div>

	<script>
		var form = document.getElementById("EditForm");
		var submit = document.getElementById("registerForm").addEventListener("submit", function (e) {
			e.preventDefault();
			return form.submit();
		})
	</script>
<script>
	function showPreview(event) {
		if (event.target.files.length > 0) {
			var src = URL.createObjectURL(event.target.files[0]);
			var preview = document.getElementById("file-ip-1-preview");
			preview.src = src;
			preview.style.display = "block";
			document.getElementById("file-ip-1").style.marginTop="0.1rem";
			var x=document.getElementById("tuje_hide");
			if (x.style.display === "none") {
              x.style.display = "block";
               } else {
            x.style.display = "none";
            }
		}
	}
</script>
</div>
</body>

</html>