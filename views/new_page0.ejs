<link rel="stylesheet" href="css/page0.css">
<style>
img:hover{
  transform: rotate(0) scale(1.1) translateZ(0);
  -webkit-filter: drop-shadow(0 20px 20px  rgba(0, 0, 0, 0.70));
  filter: drop-shadow(0 20px 20px rgba(0, 0, 0, 0.70));
}

</style>

<div class="container my-4">
    <h2>Ngos Seeking for help</h2>
    <!-- < for(let j=0; j<1; j++){ %> -->
    <div class="card-group sibling-fade">
        <% for(let i=0; i<length; i++){ %>
            <div class="col-lg-4 col-md-4">
                <div class="card mx-3 my-2">
                    <img class="card-img-top" style="height: 20rem; width: 21rem;" src=<%=ngos[i].doc.image %>
                    alt="Card Groups">
                    <div class="card-body">
                        <h5 class="card-title">
                            <%= ngos[i].doc.name %>
                        </h5>
                        <p class="card-text"  style="height: 15rem; width: 20rem;  word-wrap: break-word;">
                            <%= ngos[i].doc.desc %>
                        </p>
                    </div>
                    <div class="card-footer">
                        <div class="button"  > Read More <span class="fas fa-arrow-right"></span></div>
                        <div class="button" style="margin-left: 12rem; position: absolute; right: 1rem;" onclick="window.location.href = '/log'">Donate</div>
                    </div>
                </div>
            </div>

            <% } %>
    </div>
    <!-- < } %> -->
</div>